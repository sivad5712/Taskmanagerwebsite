
# Production environment configuration for deployment
NODE_ENV=production
PORT=3001

# Security - CHANGE THESE IN REAL PRODUCTION!
JWT_SECRET=production-jwt-secret-key-change-this-immediately-for-real-deployment
BCRYPT_ROUNDS=12

# Database
DATABASE_PATH=/app/data/database.sqlite

# CORS Configuration for public deployment
# Add your domain here after deployment
ALLOWED_ORIGINS=http://localhost,https://localhost,https://*.railway.app,https://*.render.com,https://*.vercel.app,https://*.netlify.app,https://*.fly.dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
